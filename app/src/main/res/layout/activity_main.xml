<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="00"/>

    <Button
        android:id="@+id/button01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/button00"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="01"/>

    <Button
        android:id="@+id/button02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/button01"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="02"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button00"
        android:layout_marginStart="20dp"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="10"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button01"
        android:layout_toEndOf="@id/button10"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="11"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button02"
        android:layout_toEndOf="@id/button11"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="12"/>

    <Button
        android:id="@+id/button20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button10"
        android:layout_marginStart="20dp"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="20"/>

    <Button
        android:id="@+id/button21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button11"
        android:layout_toEndOf="@id/button20"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="21"/>

    <Button
        android:id="@+id/button22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/button12"
        android:layout_toEndOf="@id/button21"
        android:text=""
        android:textSize="24sp"
        android:onClick="buttonClick"
        android:tag="22"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Reset"
        android:textSize="18sp"
        android:onClick="resetGame"/>

</RelativeLayout>
